{
  "name": "@frp/core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "@frp/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/@frp/core",
        "main": "@frp/core/src/index.ts",
        "tsConfig": "@frp/core/tsconfig.lib.json",
        "assets": ["@frp/core/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["@frp/core/**/*.ts", "@frp/core/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "@frp/core/jest.config.ts"
      }
    }
  },
  "tags": []
}
